// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_size": 16,
  "buffer_font_family": "MesloLGMDZ Nerd Font",
  "buffer_font_size": 16,
  "terminal": {
    "font_size": 12,
    "font_family": "MesloLGMDZ Nerd Font"
  },

  "assistant": {
    "enabled": true,
    "default_model": {
      "provider": "openai",
      "model": "deepseek/deepseek-r1"
    },
    "version": "2",
    "button": true,
    "dock": "right"
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "https://openrouter.ai/api/v1",
      "available_models": [
        {
          "name": "deepseek/deepseek-r1",
          "display_name": "OR DeepSeek R1",
          "max_tokens": 128000
        },
        {
          "name": "openai/gpt-4o-2024-11-20",
          "display_name": "OR GPT 4o",
          "max_tokens": 128000
        },
        {
          "name": "anthropic/claude-3.5-sonnet",
          "display_name": "OR Claude Sonnet 3.5",
          "max_tokens": 128000
        },
        {
          "name": "deepseek/deepseek-chat",
          "display_name": "OR DeepseeklV3",
          "max_tokens": 128000
        },
        {
          "name": "openai/gpt-4o-mini",
          "display_name": "OR GPT 4o mini",
          "max_tokens": 128000
        },
        {
          "name": "anthropic/claude-3.5-haiku",
          "display_name": "OR Claude Haiku 3.5",
          "max_tokens": 128000
        },
        {
          "name": "qwen/qwen-2.5-coder-32b-instruct",
          "display_name": "OR Qwen 2.5 Coder 32B",
          "max_tokens": 128000
        }
      ]
    }
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Frapp√© - No Italics"
  }
}
